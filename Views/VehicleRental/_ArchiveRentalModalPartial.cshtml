@model RentalModel

<div class="modal fade" id="Archive-@Model.Id" aria-labelledby="Archive" aria-hidden="true">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <h4 class="modal-title">Archive rental</h4>
                <button type="button" class="close" data-dismiss="modal">
                    <span aria-hidden="true">&times;</span>
                </button>
            </div>

            <div class="modal-body">
                <form asp-action="Archive" asp-route-id="@Model.Id" asp-route-archived="@ViewData["Archived"]" method="post">
                    <div class="form-group">
                        <label asp-for="Id">ID: @Model.Id</label>
                    </div>
                    <div class="form-group">
                        <label asp-for="FirstName">@Model.FirstName</label>
                        <label asp-for="LastName">@Model.LastName</label>
                    </div>
                    <div class="form-group">
                        <label asp-for="Vehicle">@Model.Vehicle</label>
                    </div>
                    <div class="form-group">
                        <label asp-for="StartDate">@Model.StartDate.ToShortDateString() -</label>
                        <label asp-for="EndDate">@Model.EndDate.ToShortDateString()</label>
                    </div>

                    <div class="modal-footer">
                        <button type="button" class="btn btn-outline-dark" data-dismiss="modal">Close</button>
                        <button type="submit" class="btn btn-outline-warning">Archive</button>
                    </div>
                </form>
            </div>
        </div>
    </div>

</div>