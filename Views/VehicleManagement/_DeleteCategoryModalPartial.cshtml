@model CategoryModel

<div class="modal fade" id="DeleteCategory-@Model.Id" aria-labelledby="DeleteCategory" aria-hidden="true">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <h4 class="modal-title">Delete category</h4>
                <button type="button" class="close" data-dismiss="modal">
                    <span aria-hidden="true">&times;</span>
                </button>
            </div>

            <div class="modal-body">
                <form asp-action="DeleteCategory" asp-route-id="@Model.Id"  method="post">
                    <div class="form-group">
                        <label asp-for="Id">ID: @Model.Id</label>
                    </div>
                    <div class="form-group">
                        <label asp-for="Name">@Model.Name</label>
                    </div>

                    <div class="modal-footer">
                        <button type="button" class="btn btn-outline-dark" data-dismiss="modal">Close</button>
                        <button type="submit" class="btn btn-outline-danger">Delete</button>
                    </div>
                </form>
            </div>
        </div>
    </div>

</div>